    <script>
        function exec(vari) {
            var code = document.getElementById("code").contentWindow.document;
            console.log(vari);
            code.open();
            code.writeln(vari);
            code.close();
        }
    </script>
    <style>
        #inp {
            height: 100%;
            width: 50%;
        }
        iframe {
            height: 100%;
            width: 50%;
        }
    </style>
